{
  "name": "template",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./server.js",
    "start:dev": "cross-env NODE_ENV=development nodemon ./server.js",
    "test:verbose": "cross-env NODE_ENV=test jest --no-cache --verbose --detectOpenHandles",
    "test:normal": "cross-env NODE_ENV=test jest --no-cache",
    "test:coverage": "jest --coverage",
    "lint": "eslint **/*.js",
    "lint:fix": "eslint --fix **/*.js"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.6",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.26.3",
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "express": "4.17.1",
    "express-rate-limit": "^5.3.0",
    "express-session": "^1.17.2",
    "gravatar": "^1.8.2",
    "helmet": "^4.6.0",
    "http-error": "^0.0.6",
    "jimp": "^0.16.1",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "mailgen": "^2.0.15",
    "mongoose": "^5.13.7",
    "mongoose-paginate-v2": "^1.4.2",
    "morgan": "1.10.0",
    "multer": "^1.4.3",
    "nodemailer": "^6.6.3",
    "nodemailer-smtp-transport": "^2.7.4",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "eslint": "7.19.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "5.2.0",
    "jimp": "^0.16.1",
    "lint-staged": "^11.1.1",
    "nodemon": "2.0.15",
    "supertest": "^6.1.6"
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "./**/*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
